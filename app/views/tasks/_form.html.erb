<%= form_for @task, html: {class: "form-horizontal center"} do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved!</h4>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label "Task type", class: "col-md-2 control-label" %>
    <div class="col-md-10"><%= f.select :tasktype, [["Firmware test", "FW"], ["Hardware Test", "HW"], ["Other", "Other"]], {}, {class: "chosen-select", :required => true} %></div>
    <!-- <%= f.text_field :tasktype, class: "form-control", :required => true %> -->
  </div>

  <div class="form-group field">
    <%= f.label :label, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.collection_select :label, Redminer.child, :redmine_project_name, :redmine_project_name, {prompt: "Select project"}, {class: "chosen-select", :required => true} %></div>
  </div>

  <div class="form-group field">
    <%= f.label "Note", class: "col-md-2 control-label" %>
    <div class="col-md-10"><%= f.text_field :text, class: "form-control", :required => true %></div>
  </div>

  <div class="form-group field">
    <%= f.label :assignee, class: "col-md-2 control-label" %>
    <div class="col-md-10"><%= f.collection_select :assignee, User.activated, :id, :last_name, {prompt: "Select assignee"}, {class: "chosen-select", :required => true} %></div>
  </div>

  <div class="form-group field">
    <%= f.label :starttime, class: "col-md-2 control-label" %>
    <div class="col-md-10"><%= f.date_field :starttime, :value => Time.now.strftime('%Y-%m-%d'), class: "form-control", :required => true %></div>
  </div>

  <div class="form-group field">
    <%= f.label :endtime, class: "col-md-2 control-label" %>
    <div class="col-md-10"><%= f.date_field :endtime, :value => Time.now.strftime('%Y-%m-%d'), class: "form-control", :required => true %><br></div>
  </div>

  <div class="form-group field">
    <%= f.label :done, class: "col-md-2 control-label"  %>
    <div class="col-md-10"><%= f.check_box :done, class: "form-control" %><br></div>
  </div>

<div class="btn-group">

  <%= f.submit class: 'btn btn-primary' %>

<% end %>
