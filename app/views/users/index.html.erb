<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table">
  <thead>
    <tr class="active">
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Admin</th>
      <th>Active</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <% if user.admin %>
          Yes
          <% else %>
          No
          <% end %>
        </td>
        <td>
          <% if user.activated %>
          Yes
          <% else %>
          No
          <% end %>
        </td>
        <td><%= link_to 'Show', user, :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-primary btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
