<p id="notice"><%= notice %></p>

<table class='table'>
  <tr>
    <td><b>First name:</b></td>
    <td><%= @user.first_name %></td>
  </tr>

  <tr>
    <td><b>Last name:</b></td>
    <td><%= @user.last_name %></td>
  </tr>

  <tr>
    <td><b>Email:</b></td>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <td><b>Team:</b></td>
    <td><%= @user.role %></td>
  </tr>

  <tr>
    <td><b>Role:</b></td>
    <td>
      <% if @user.admin %>
      Admin
      <% else %>
      User
      <% end %>
    </td>

    <tr>
      <td><b>Status:</b></td>
      <td>
        <% if @user.activated %>
        Active
        <% else %>
        Offline
        <% end %>
      </td>
  </tr>


</table>

<div class="col-sm-4 text-center"></div>

<div class="col-sm-4 text-center">
  <div class = "btn-group btn-group-justified">
    <div class="btn-group"><%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-primary" %></div>
    <div class="btn-group"><%= link_to 'Back', users_path, :class => "btn btn-primary" %></div>
  </div>
</div>

<div class="col-sm-4 text-center"></div>
